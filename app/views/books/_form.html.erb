<%= form_for(@book, html:{class: 'form-horizontal'}) do |f| %>
  <%= render 'shared/errors', object: @book %>
  <%= bootstrap_form_field(f, :title) do %>
    <%= f.text_field :title, autofocus: true, class: "form-control" %>
  <% end %>
  <%= bootstrap_form_field(f, :author) do %>
    <%= f.text_field :author, class: "form-control" %>
  <% end %>
  <%= bootstrap_form_field(f, :abstract) do %>
    <%= f.text_area :abstract, class: "form-control" %>
  <% end %>
  <%= bootstrap_form_field(f, :pages) do %>
    <%= f.text_field :pages, class: "form-control" %>
  <% end %>
  <%= bootstrap_form_field(f, :price) do %>
    <%= f.text_field :price, class: "form-control" %>
  <% end %>
  <%= bootstrap_form_field(f, :genre) do %>
    <%= f.select :genre, Book::GENRES, { prompt: "Pick one" }, { class: "form-control" } %>
  <% end %>
  <%= bootstrap_form_field(f, :published_on) do %>
    <%= f.date_select :published_on, { start_year: 1800, prompt: true, order: [ :month, :day, :year ] }, { class: "form-control date-select" } %>
  <% end %>
  <%= bootstrap_form_field(f, :image_file_name) do %>
    <%= f.text_field :image_file_name, class: "form-control" %>
  <% end %>
  <p>
    <%= f.submit class: 'btn btn-primary' %>
    <%= link_to 'Cancel', books_path, class: 'btn btn-link' %>
  </p>
<% end %>
